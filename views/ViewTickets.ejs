<html lang="en">
<head>
    <link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/static/css/variables.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/nav.css">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/footer.css">
    <link rel="stylesheet" href="/static/css/elements.css">
    <title>Previous tickets</title>
</head>
<body>
    <nav>
      <form action="/logout?_method=DELETE" method="POST">
        <div class="left">
          <span class="logo">WebAMS</span>
        </div>
        <div class="right">
          <div class="menu">
            <a href="#!">Home</a>
            <a href="#!">Blog</a>
            <button type="submit">Log Out</button>
          </div>
        </div>
      </nav>
    <main>
        <div class="container">
       <h1>Previous Incidents</h1>
        <p class="separator">View statuses of previously reported incidents.</p>
        <% if(tickets == '') { %>
          <h3>You have not reported any incidents yet.</h3>
        <% } else { %>
          <% for(var i = 0; i < tickets.length; ++i ) {%>
          <div class="ticket">
            <details>
              <summary>
                <span class="ticket-title">
                  <%=tickets[i].title%>
                </span>
              </summary>
              <span class="ticket-description">
                <%=tickets[i].description%>
              </span>
            </details>
            <span class="ticket-date">
              <%=tickets[i].date%>
            </span>
            <span class="ticket-time">
              <%=tickets[i].time%>
            </span>
            <span class="ticket-priority">
              <%=tickets[i].priority%>
            </span>
            <span class="ticket-status">
              <%=tickets[i].status%>
            </span>
          </div>
          <hr/>
          <% } %>
        <% } %>
        </div>
    </main>
    
</body>
</html>