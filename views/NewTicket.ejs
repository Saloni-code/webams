<html lang="en">
<head>
    <link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/static/css/variables.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/nav.css">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/footer.css">
    <link rel="stylesheet" href="/static/css/elements.css">
    <title>Generate a new ticket</title>
</head>
<body>
    <nav>
      <form action="/logout?_method=DELETE" method="POST">
        <div class="left">
          <span class="logo">WebAMS</span>
        </div>
        <div class="right">
          <div class="menu">
            <a href="#!">Home</a>
            <a href="#!">Blog</a>
            <button type="submit">Log Out</button>
          </div>
        </div>
      </form>
    </nav>
    <main>
      <div class="container">
        <form method="POST" action="/newticket">
            <h1>Report an Incident</h1>
            <p class="separator">Generate a ticket for new incident</p>
            <p><input type="text" placeholder="title" name="title" maxlength="99"> </p>
            <p><textarea name="description" placeholder="Description-be as brief as possible" rows=5 cols="45" maxlength="999"></textarea></p>
            <p>
                <select name="priority">
                    <option>Priority</option>
                    <option>Low</option>
                    <option>Normal</option>
                    <option>Important</option>
                    <option>Critical</option>
                    <option>Extreme</option>
                </select>
            </p>
                <button type="submit">Create incident</button>
            <a href="/">Cancel</a> 
        </form>
        </div>
    </main>
    
</body>
</html>